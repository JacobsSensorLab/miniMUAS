            /muas/iuas-01/Sensor/CaptureSingle
        }
    }

    user-policy
    {
        for /muas/wuas-01/
        allow
        {
            /muas/iuas-01/IUAS/PointOrbit
            /muas/iuas-01/FlightCtrl/Takeoff
            /muas/iuas-01/FlightCtrl/Land
            /muas/iuas-01/FlightCtrl/Kill
