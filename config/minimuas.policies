name /muas/controller/NDNSF/ControllerPolicy/v1

provider-policies
{
    provider-policy
    {
        for /muas/iuas-01
        allow
        {
            /FlightCtrl/Takeoff
            /FlightCtrl/Land
            /FlightCtrl/Kill
            /FlightCtrl/RTL
            /Sensor/GetSensorInfo
            /Sensor/CaptureSingle
            /IUAS/PointOrbit
        }
